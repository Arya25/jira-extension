{
  "name": "JIRA Board Shuffle",
  "description": "Shuffles your JIRA board for daily standups, so you know who's going next!",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/jira/*/boards/*"],
      "js": ["main.js"]
    }
  ],
  "icons": {
    "16": "/images/shuffle16.png",
    "48": "/images/shuffle48.png",
    "128": "/images/shuffle128.png"
  }
}
